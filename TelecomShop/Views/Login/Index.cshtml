
@model TelecomShop.Models.LoginModel

<section class="page-title" style="background-image: url(/Assets/client/images/background/10.jpg)">
    <div class="auto-container">
        <h2>Login</h2>
        <ul class="bread-crumb clearfix">
            <li><a href="/">Home</a></li>
            <li>Login</li>
        </ul>
    </div>
</section>
<!--End Page Title-->
<section class="services-page-section">
    <div class="auto-container">
        @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "mx-auto", @style = "max-width:500px" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control form-control-user", @placeholder = "Enter Email Address...", @autofocus = "autofocus" })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                @Html.PasswordFor(model => model.Password, new { @class = "form-control form-control-user", @placeholder = "Password" })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
            <div class="form-check d-flex justify-content-between">
                <div>
                    @Html.CheckBoxFor(model => model.RememberMe, new { @class = "form-check-input", @id = "remember" })
                    <label class="form-check-label" for="remember">Remember me</label>
                </div>
                <a href="/register" class="ml-auto text-primary">Sign up</a>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger mt-3" })
            <button type="submit" class="btn btn-primary mt-3">Submit</button>
        }
    </div>
</section>